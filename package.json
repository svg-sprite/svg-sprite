{
  "name": "svg-sprite",
  "version": "1.6.0-alpha.0",
  "author": "Joschi Kuphal <joschi@kuphal.net> (https://jkphl.is)",
  "description": "SVG sprites & stacks galore â€” A low-level Node.js module that takes a bunch of SVG files, optimizes them and bakes them into SVG sprites of several types along with suitable stylesheet resources (e.g. CSS, Sass, LESS, Stylus, etc.)",
  "homepage": "https://github.com/svg-sprite/svg-sprite",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svg-sprite/svg-sprite.git"
  },
  "bugs": {
    "url": "https://github.com/svg-sprite/svg-sprite/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "main": "lib/svg-sprite.js",
  "bin": {
    "svg-sprite": "./bin/svg-sprite.js"
  },
  "files": [
    "bin",
    "docs",
    "lib",
    "tmpl"
  ],
  "scripts": {
    "lint": "xo",
    "fix": "npm run lint -- --fix",
    "mocha": "_mocha --timeout 10000 test/svg-sprite.js",
    "coverage": "c8 npm run mocha",
    "example": "node example.js",
    "test": "npm run mocha"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.7.5",
    "async": "^3.2.1",
    "css-selector-parser": "^1.4.1",
    "csso": "^4.2.0",
    "cssom": "^0.5.0",
    "glob": "^7.2.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "phantomjs-prebuilt": "^2.1.16",
    "prettysize": "^2.0.0",
    "svgo": "^2.7.0",
    "vinyl": "^2.2.1",
    "winston": "^3.3.3",
    "xpath": "^0.0.32",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "c8": "^7.9.0",
    "less": "^4.1.1",
    "looks-same": "^7.3.0",
    "mocha": "^9.1.2",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "should": "^13.2.3",
    "stylus": "^0.55.0",
    "svg2png": "^4.1.1",
    "xo": "^0.45.0"
  },
  "keywords": [
    "icon",
    "icons",
    "svg",
    "png",
    "sprite",
    "spritesheet",
    "stack",
    "generator",
    "css",
    "sass",
    "less",
    "stylus",
    "stylesheet",
    "inline",
    "html",
    "vector",
    "rwd",
    "retina",
    "mustache",
    "gulpfriendly"
  ],
  "c8": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ]
  },
  "mocha": {
    "check-leaks": true,
    "throw-deprecation": true,
    "trace-deprecation": true,
    "trace-warnings": true,
    "use_strict": true
  },
  "xo": {
    "space": 4,
    "rules": {
      "arrow-body-style": "off",
      "capitalized-comments": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "eslint-comments/disable-enable-pair": "off",
      "guard-for-in": "off",
      "max-depth": [
        "warn",
        5
      ],
      "max-params": "off",
      "no-negated-condition": "off",
      "node/prefer-promises/fs": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "prefer-template": "error",
      "promise/prefer-await-to-then": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "spaced-comment": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-method-this-argument": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-for-loop": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-query-selector": "off",
      "unicorn/prefer-reflect-apply": "off",
      "unicorn/prefer-string-slice": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "mocha"
        ]
      },
      {
        "files": "**/*.phantom.js",
        "envs": [
          "phantomjs"
        ],
        "parserOptions": {
          "ecmaVersion": 3,
          "sourceType": "script"
        },
        "rules": {
          "no-var": "off",
          "prefer-arrow-callback": "off",
          "prefer-template": "off"
        }
      }
    ]
  }
}
