# editorconfig.org
# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.yml,*.yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[test/fixture/*]
insert_final_newline = false
trim_trailing_whitespace = false
